<Window x:Class="BookEdit.Editor.AddLink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="增加链接" Height="152" Width="258" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,23,0,0" TextWrapping="Wrap" Text="链接文字：" VerticalAlignment="Top"/>
        <TextBox Name="txt_LinkText" HorizontalAlignment="Left" Height="23" Margin="98,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="30,56,0,0" TextWrapping="Wrap" Text="链接地址：" VerticalAlignment="Top"/>
        <TextBox Name="txt_LinkAddress" HorizontalAlignment="Left" Height="23" Margin="98,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="130,80,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
